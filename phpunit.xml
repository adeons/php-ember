<?xml version="1.0" encoding="UTF-8" ?>
<phpunit 
	backupGlobals="false"
	backupStaticAttributes="false"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	processIsolation="false"
	stopOnFailure="false"
	syntaxCheck="false"
	bootstrap="tests.php">
	
	<testsuites>
		<testsuite name="PhpEmber Test Suite">
			<directory>./src/PhpEmber/Tests</directory>
		</testsuite>
		
		<testsuite name="PhpEmber Yii Test Suite">
			<directory>./src/PhpEmber/Yii/Tests</directory>
		</testsuite>
	</testsuites>
	
	<filter>
		<whitelist>
			<directory>./src</directory>
		</whitelist>
	</filter>
</phpunit>
